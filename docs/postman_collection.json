              "raw": "{\n  \"pull_request_id\": \"{{pr_id}}\",\n  \"old_reviewer_id\": \"u2\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/pullRequest/reassign",
              "host": ["{{base_url}}"],
              "path": ["pullRequest", "reassign"]
            }
          },
          "response": []
        }
